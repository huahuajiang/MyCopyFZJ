<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="label_Style" TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="#585858"></Setter>
    </Style>

    <Style x:Key="Error_Style" TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="Red"></Setter>
        <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
        <Setter Property="FontSize" Value="40"></Setter>
    </Style>

    <Style x:Key="Count_Style" TargetType="{x:Type Label}">
        <Setter Property="FontFamily" Value="微软雅黑"></Setter>
        <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="FontSize" Value="26"></Setter>
        <Setter Property="Foreground" Value="#0096DA"></Setter>
    </Style>
</ResourceDictionary>