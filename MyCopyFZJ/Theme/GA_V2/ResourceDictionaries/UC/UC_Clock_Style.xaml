<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="UC_Clock_img" TargetType="{x:Type Image}">
        <Setter Property="Source" Value="/ZZFZJ;component/Theme/GA_V2/UI_Images/Common/Clock.png"></Setter>
        <Setter Property="Grid.ColumnSpan" Value="2"></Setter>
    </Style>

    <Style x:Key="UC_Clock_label" TargetType="{x:Type Label}">
        <Setter Property="Canvas.Left" Value="39"></Setter>
        <Setter Property="Canvas.Top" Value="3"></Setter>
        <Setter Property="Width" Value="66"></Setter>
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="Grid.Column" Value="1"></Setter>
        <Setter Property="FontSize" Value="32"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
        <Setter Property="FontFamily" Value="Microsoft Sans Serif"></Setter>
    </Style>

</ResourceDictionary>