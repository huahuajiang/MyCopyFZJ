<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="UI_SelectDataPage_back_img" TargetType="{x:Type Image}">
        <Setter Property="Canvas.Left" Value="60"></Setter>
        <Setter Property="Canvas.Top" Value="200"></Setter>
        <Setter Property="Source" Value="/ZZFZJ;component/Theme/GA_V2/UI_Images/UI_SelectDataPage/bg_conten.png"></Setter>
    </Style>

    <Style x:Key="UI_SelectDataPage_title_img" TargetType="{x:Type Image}">
        <Setter Property="Canvas.Left" Value="381"></Setter>
        <Setter Property="Canvas.Top" Value="120"></Setter>
        <Setter Property="Source" Value="/ZZFZJ;component/Theme/GA_V2/UI_Images/UI_SelectDataPage/title.png"></Setter>
    </Style>

    <Style x:Key="UI_SelectDataPage_name_img" TargetType="{x:Type Image}">
        <Setter Property="Canvas.Left" Value="125"></Setter>
        <Setter Property="Canvas.Top" Value="248"></Setter>
        <Setter Property="Source" Value="/ZZFZJ;component/Theme/GA_V2/UI_Images/UI_SelectDataPage/name.png"></Setter>
    </Style>

    <Style x:Key="UI_SelectDataPage_name_Label" TargetType="{x:Type Label}">
        <Setter Property="Canvas.Left" Value="125"></Setter>
        <Setter Property="Canvas.Top" Value="253"></Setter>
        <Setter Property="FontSize" Value="18"></Setter>
        <Setter Property="Content" Value="姓名:"></Setter>
